<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de Lista para DockerComposeTemplate -->
        <record id="view_docker_compose_template_tree" model="ir.ui.view">
            <field name="name">docker.compose.template.tree</field>
            <field name="model">docker.compose.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="view_docker_compose_template_form" model="ir.ui.view">
            <field name="name">docker.compose.template.form</field>
            <field name="model">docker.compose.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="error_msg"/>
                            <field name="model"/>
                            <field name="model_id"/>
                        </group>
                        <notebook>
                            <page id="body" name="Body">
                                <field name="body"
                                       placeholder="Use {{1}}, {{2}} as placeholders for dynamic variable"
                                />
                            </page>
                            <page id="variables" name="Variables">
                                <field name="variable_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="display_name" string="Name"/>
                                        <field name="demo_value" required="1"/>
                                        <field name="field_type"/>
                                        <field name="field_name"
                                               widget="DynamicModelFieldSelectorChar"

                                               options="{'model': 'model'}"/>
                                        <field name="model" invisible="1"/>
                                        <field name="line_type" invisible="1" force_save="1"/>
                                        <field name="name" invisible="1" force_save="1"/>
                                    </tree>
                                </field>
                                <field name="demo_body"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="dc_template_variable_view_tree" model="ir.ui.view">
        <field name="name">dc.template.variable.view.tree</field>
        <field name="model">dc.template.variable</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="dc_template_id"/>
                <field name="model"/>
                <field name="line_type"/>
                <field name="field_type"/>
                <field name="field_name"/>
                <field name="demo_value"/>
            </tree>
        </field>
    </record>
    <record id="dc_template_variable_view_form" model="ir.ui.view">
        <field name="name">dc.template.variable.view.form</field>
        <field name="model">dc.template.variable</field>
        <field name="arch" type="xml">
            <form string="Template Button">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dc_template_id"/>
                            <field name="model"/>
                        </group>
                        <group>
                            <field name="line_type"/>
                            <field name="field_type"/>
                            <field name="field_name"/>
                            <field name="demo_value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    </data>
</odoo>
